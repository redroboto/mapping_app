<div class="xl:h-screen flex flex-col text-white">
    <img class="w-full xl:block hidden" src="https://i.postimg.cc/cHwq0Tf6/alice-guo-blur.png">
    <img class="w-full xl:hidden" src="https://i.postimg.cc/T1fwnK92/alice-guo.png">
    <span class="flex flex-col items-start p-8 md:px-14 xl:absolute top-[30rem]">
        <h1 class="montserrat-semibold w-full text-4xl border-b-4 border-rose-600 pb-2 transition-all ease-in-out duration-300 md:text-7xl text-shadow-md">
            PHILIPPINE POGO CRISIS
        </h1>
        <h2 class="montserrat-semibold w-full text-3xl pt-2 transition-all ease-in-out duration-300 md:text-5xl text-shadow-md">
            Unveiling the Dark Side of Online Gambling
        </h2>
        <p class="pt-2 transition-all ease-in-out duration-300 md:text-lg text-shadow-sm">
            Discover the turmoil in the Philippine Offshore Gaming Operators (POGO) industry, from rising crime to economic challenges & regulatory struggles.
        </p>
    </span>
</div>
<section class="px-8 mb-8 md:px-16">
    <div class="swiper flex justify-center">
        <div class="swiper-wrapper">
            <% @news.each_slice(2).with_index do |articles, index| %>
                <% articles.each do |article| %>
                    <% if article['title'] && article['urlToImage'] && article['author'] && article['description'] %>
                        <div class="swiper-slide">
                            <a href="<%= article['url'] %>" target="_blank" class="flex-1 lg:max-w-xs">
                                <li class="w-full h-fit hover:scale-105 duration-300">
                                    <% if article['urlToImage'] %>
                                        <img class="w-full object-fit h-80 lg:h-60" src="<%= article['urlToImage'] %>" alt="Image for <%= article['title'] %>" />
                                    <% end %>
                                    <div class="bg-white p-4">
                                        <h3 class="text-lg text-justify font-semibold mb-2 lg:h-28">
                                            <%= article['title'] %>
                                        </h3>
                                    </div>
                                </li>
                            </a>
                        </div>
                    <% end %>
                <% end %>
            <% end %>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev hover:bg-gray-400"></div>
        <div class="swiper-button-next"></div>
    </div>
</section>