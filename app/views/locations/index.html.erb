<main class="flex flex-col h-screen">
<nav class="flex gap-2 h-14 bg-gray-800">
    <%= render "locations/navbar"%>
</nav>
<div class="flex flex-1">
    <div class="w-1/4 bg-gray-200">
        <%= render "locations/sidebar"%>
    </div>
    <div class="flex-1">
        <div class="h-full" data-controller="map" data-map-latlong-value="<%=@locations.pluck(:latitude, :longitude)%>">
            <div data-map-target="container" class="h-full w-full"></div>
        </div>
    </div>
</div>
</main>

